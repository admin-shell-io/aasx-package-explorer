                            <MenuItem Foreground="Black" Header="Import BAMM RDF into AASX .." Command="{StaticResource RDFRead}"/>
                            <MenuItem Foreground="Black" Header="Read time series values into SubModel .." Command="{StaticResource ImportTimeSeries}"/>
                            <MenuItem Foreground="Black" Header="Import SubmodelElements from Table .." Command="{StaticResource ImportTable}"/>
