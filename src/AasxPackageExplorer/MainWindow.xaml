                            <MenuItem Foreground="Black" Header="Export Submodel to JSON .." Command="{StaticResource SubmodelWrite}"/>
                            <MenuItem Foreground="Black" Header="PUT Submodel to URL .." Command="{StaticResource SubmodelPut}"/>
