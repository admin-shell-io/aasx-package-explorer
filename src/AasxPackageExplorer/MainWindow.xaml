                            <MenuItem Foreground="Black" Header="Export Submodel as snippet for PredefinedConcepts .." Command="{StaticResource ExportPredefineConcepts}"/>
                            <MenuItem Foreground="Black" Header="Export Submodel as Thing Description JSON LD document" Command="{StaticResource SubmodelTDExport}"/>
                            <MenuItem Foreground="Black" Header="Print Asset as code sheet .." Command="{StaticResource PrintAsset}"/>
                            <MenuItem Foreground="Black" Header="Export TeDZ Simulation Model Description (SMD) .." Command="{StaticResource ExportSMD}"/>
                            <MenuItem Foreground="Black" Header="Export SubmodelElements as Table .." Command="{StaticResource ExportTable}"/>
