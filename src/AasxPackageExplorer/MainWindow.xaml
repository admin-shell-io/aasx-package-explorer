                            <MenuItem Foreground="Black" Header="Query HTTP/REST registry .." Command="{StaticResource FileRepoConnectRegistry}"/>
                            <Separator/>
                            <MenuItem Foreground="Black" Header="Create last recently used list .." Command="{StaticResource FileRepoCreateLRU}"/>
                            <Separator/>
                            <MenuItem Foreground="Black" Header="Query open repositories .." InputGestureText="F12" Command="{StaticResource FileRepoQuery}"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Foreground="Black" Header="Import ..">
