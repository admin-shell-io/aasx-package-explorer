                        </MenuItem>
                        <Separator/>
                        <MenuItem Foreground="Black" Header="Server ..">
                            <MenuItem Foreground="Black" Header="Serve AAS as REST .." InputGestureText="Shift+F6" Command="{StaticResource ServerRest}"/>
                            <MenuItem Foreground="Black" Header="Publish AAS via MQTT .." Command="{StaticResource MQTTPub}"/>
                            <Separator/>
                            <MenuItem Foreground="Black" Header="Plugin: Empty Sample .." Command="{StaticResource ServerPluginEmptySample}"/>
                            <MenuItem Foreground="Black" Header="Plugin: OPC UA .." Command="{StaticResource ServerPluginOPCUA}"/>
                            <MenuItem Foreground="Black" Header="Plugin: MQTT .." Command="{StaticResource ServerPluginMQTT}"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Foreground="Black" Header="_Exit" InputGestureText="Alt+F4" Command="{StaticResource Exit}"/>
                    </MenuItem>
                    <MenuItem Header="Workspace" Template="{DynamicResource MenuItemControlTemplateDropShadow}">
                        <MenuItem x:Name="MenuItemWorkspaceEdit" Foreground="Black" Header="_Edit" InputGestureText="Ctrl+E" IsCheckable="True" Command="{StaticResource EditMenu}"/>
                        <MenuItem x:Name="MenuItemWorkspaceHints" Foreground="Black" Header="_Hints" InputGestureText="Ctrl+H" IsCheckable="True" IsChecked="True" Command="{StaticResource HintsMenu}"/>
                        <MenuItem x:Name="MenuItemTest" Foreground="Black" Header="Test" Command="{StaticResource Test}"/>
                        <Separator/>
                        <MenuItem x:Name="MenuItemFind" Foreground="Black" Header="Find ..." Command="{StaticResource ToolsFindText}"/>
