                        <MenuItem Foreground="Black" Header="Close Auxiliary AAS" Command="{StaticResource CloseAux}"/>
                        <Separator/>
                        <MenuItem Foreground="Black" Header="Further connect options ..">
                            <MenuItem Foreground="Black" Header="Secure Connect .." InputGestureText="Ctrl+Shift+O" Command="{StaticResource ConnectSecure}"/>
                            <MenuItem Foreground="Black" Header="Connect via OPC-UA .." Command="{StaticResource ConnectOpcUa}"/>
                            <MenuItem Foreground="Black" Header="Connect via REST .." InputGestureText="F6" Command="{StaticResource ConnectRest}"/>
                        </MenuItem>
                        <Separator/>
