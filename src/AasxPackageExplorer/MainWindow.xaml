                        </MenuItem>
                        <Separator/>
                        <MenuItem x:Name="MenuItemWorkspacConvertElement" Foreground="Black" Header="Convert .." Command="{StaticResource ConvertElement}"/>
                        <Separator/>
                        <MenuItem Foreground="Black" Header="Buffer ..">
