{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "AssetAdministrationShellSubmodelNameplate",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/$defs/Root"
    }
  ],
  "$defs": {
    "Root": {
      "allOf": [
        {
          "$ref": "aasV2.0.json#/definitions/Submodel"
        },
        {
          "$ref": "#/$defs/Identifiable"
        },
        {
          "$ref": "#/$defs/Elements"
        }
      ]
    },
    "Identifiable": {
      "type": "object",
      "properties": {
        "modelType": {
          "type": "object",
          "name": {
            "const": "Submodel"
          }
        }
      }
    },
    "Elements": {
      "type": "array",
      "additionalItems": false,
      "properties": {
        "submodelElements": {
          "allOf": [
            {
              "$ref": "#/$defs/Prop1"
            }
          ]
        }
      }
    },
    "Prop1": {
      "minContains": 1,
      "maxContains": 1,
      "contains": {
        "properties": {
          "idShort": {
            "const": "Prop1"
          },
          "kind": {
            "const": "Instance"
          },
          "semanticId": {
            "properties": {
              "keys": {
                "allOf": [
                  {
                    "contains": {
                      "properties": {
                        "type": {
                          "const": "ConceptDescription"
                        },
                        "local": {
                          "const": "true"
                        },
                        "value": {
                          "const": "https://www.example.com/cd1"
                        },
                        "idType": {
                          "const": "IRI"
                        }
                      }
                    }
                  }
                ]
              }
            }
          },
          "modelType": {
            "properties": {
              "name": {
                "const": "Property"
              }
            }
          },
          "valueType": {
            "properties": {
              "dataObjectType": {
                "properties": {
                  "name": {
                    "const": "String"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
